          <label for='scrapelistprompt_genre_rock'>ROCK</label>
          <input type='radio' value='soundtrack' name='scrapelistprompt[genre]' id='scrapelistprompt_genre_soundtrack'>
          <label for='scrapelistprompt_genre_soundtrack'>SOUNDTRACK</label>
          <input type='radio' value='world' name='scrapelistprompt[genre]' id='scrapelistprompt_genre_world'>
          <label for='scrapelistprompt_genre_world'>WORLD</label>
